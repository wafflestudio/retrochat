{
  "productName": "RetroChat",
  "version": "0.1.0",
  "identifier": "com.wafflestudio.retrochat",
  "build": {
    "frontendDist": "../ui-react/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "fileAssociations": [
      {
        "ext": ["json"],
        "mimeType": "application/json",
        "role": "Editor"
      },
      {
        "ext": ["jsonl"],
        "mimeType": "application/jsonl",
        "role": "Editor"
      }
    ]
  },
  "app": {
    "windows": [
      {
        "title": "RetroChat - LLM Chat History Viewer",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 800,
        "minHeight": 600,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main",
          "windows": ["main"],
          "permissions": [
            "core:webview:allow-internal-toggle-devtools",
            "dialog:default",
            "core:event:default",
            "fs:allow-stat"
          ]
        }
      ]
    }
  }
}
