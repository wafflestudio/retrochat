{
  "openapi": "3.0.3",
  "info": {
    "title": "Chat History Query API",
    "version": "1.0.0",
    "description": "Internal API for querying and filtering chat history data"
  },
  "paths": {
    "/api/sessions": {
      "get": {
        "summary": "List chat sessions with filtering",
        "description": "Retrieve chat sessions with optional filtering and pagination",
        "parameters": [
          {
            "name": "provider",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["ClaudeCode", "Gemini"]
            },
            "description": "Filter by LLM provider"
          },
          {
            "name": "project",
            "in": "query",
            "schema": {"type": "string"},
            "description": "Filter by project name"
          },
          {
            "name": "start_date",
            "in": "query",
            "schema": {"type": "string", "format": "date"},
            "description": "Filter sessions after this date"
          },
          {
            "name": "end_date",
            "in": "query",
            "schema": {"type": "string", "format": "date"},
            "description": "Filter sessions before this date"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {"type": "integer", "default": 50, "maximum": 1000},
            "description": "Maximum number of sessions to return"
          },
          {
            "name": "offset",
            "in": "query",
            "schema": {"type": "integer", "default": 0},
            "description": "Number of sessions to skip"
          },
          {
            "name": "sort_by",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["start_time", "message_count", "token_count"],
              "default": "start_time"
            },
            "description": "Field to sort by"
          },
          {
            "name": "sort_order",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "desc"
            },
            "description": "Sort order"
          }
        ],
        "responses": {
          "200": {
            "description": "Sessions retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sessions": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/ChatSession"}
                    },
                    "total_count": {"type": "integer"},
                    "has_more": {"type": "boolean"},
                    "query_duration_ms": {"type": "integer"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/sessions/{session_id}": {
      "get": {
        "summary": "Get session details with messages",
        "description": "Retrieve complete session details including all messages",
        "parameters": [
          {
            "name": "session_id",
            "in": "path",
            "required": true,
            "schema": {"type": "string", "format": "uuid"},
            "description": "Session identifier"
          },
          {
            "name": "include_content",
            "in": "query",
            "schema": {"type": "boolean", "default": true},
            "description": "Whether to include message content"
          }
        ],
        "responses": {
          "200": {
            "description": "Session details retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {"$ref": "#/components/schemas/ChatSession"},
                    {
                      "type": "object",
                      "properties": {
                        "messages": {
                          "type": "array",
                          "items": {"$ref": "#/components/schemas/Message"}
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Session not found",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/Error"}
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete chat session",
        "description": "Remove session and all associated messages from database",
        "parameters": [
          {
            "name": "session_id",
            "in": "path",
            "required": true,
            "schema": {"type": "string", "format": "uuid"}
          }
        ],
        "responses": {
          "204": {
            "description": "Session deleted successfully"
          },
          "404": {
            "description": "Session not found"
          }
        }
      }
    },
    "/api/search": {
      "get": {
        "summary": "Search message content",
        "description": "Full-text search across all message content",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": true,
            "schema": {"type": "string"},
            "description": "Search query string"
          },
          {
            "name": "provider",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["ClaudeCode", "Gemini"]
            },
            "description": "Filter by provider"
          },
          {
            "name": "project",
            "in": "query",
            "schema": {"type": "string"},
            "description": "Filter by project"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {"type": "integer", "default": 20, "maximum": 100},
            "description": "Maximum results to return"
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "results": {
                      "type": "array",
                      "items": {
                        "allOf": [
                          {"$ref": "#/components/schemas/Message"},
                          {
                            "type": "object",
                            "properties": {
                              "session_info": {
                                "type": "object",
                                "properties": {
                                  "session_id": {"type": "string"},
                                  "provider": {"type": "string"},
                                  "project_name": {"type": "string"},
                                  "start_time": {"type": "string"}
                                }
                              },
                              "snippet": {"type": "string"},
                              "relevance_score": {"type": "number"}
                            }
                          }
                        ]
                      }
                    },
                    "total_matches": {"type": "integer"},
                    "search_duration_ms": {"type": "integer"}
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ChatSession": {
        "type": "object",
        "properties": {
          "id": {"type": "string", "format": "uuid"},
          "provider": {
            "type": "string",
            "enum": ["ClaudeCode", "Gemini"]
          },
          "project_name": {"type": "string"},
          "start_time": {"type": "string", "format": "date-time"},
          "end_time": {"type": "string", "format": "date-time"},
          "message_count": {"type": "integer"},
          "token_count": {"type": "integer"},
          "file_path": {"type": "string"},
          "created_at": {"type": "string", "format": "date-time"},
          "duration_minutes": {"type": "number"}
        },
        "required": ["id", "provider", "start_time", "message_count", "file_path"]
      },
      "Message": {
        "type": "object",
        "properties": {
          "id": {"type": "string", "format": "uuid"},
          "session_id": {"type": "string", "format": "uuid"},
          "role": {
            "type": "string",
            "enum": ["User", "Assistant", "System"]
          },
          "content": {"type": "string"},
          "timestamp": {"type": "string", "format": "date-time"},
          "token_count": {"type": "integer"},
          "tool_calls": {"type": "array"},
          "metadata": {"type": "object"},
          "sequence_number": {"type": "integer"}
        },
        "required": ["id", "session_id", "role", "content", "timestamp", "sequence_number"]
      },
      "Error": {
        "type": "object",
        "properties": {
          "error_code": {"type": "string"},
          "error_message": {"type": "string"},
          "details": {"type": "object"}
        },
        "required": ["error_code", "error_message"]
      }
    }
  }
}